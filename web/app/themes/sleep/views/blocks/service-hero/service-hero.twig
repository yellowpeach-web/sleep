{% extends "components/block-wrapper.twig" %}
{% block block_content %}
<div class="pb-2">

      <div class="yp-container flex flex-col gap-20 md:gap-24 xl:flex-row xl:justify-between xl:items-center">

            {# content #}
            <div class="flex flex-col gap-8 w-full xl:w-[736px] shrink-0">

                  <div class="flex flex-col gap-6">
                        {% if fields.subheading %}
                        <h3 class="m-0 text-text-heading-fill-highlight-1 title-small">
                              {{fields.subheading}}
                        </h3>
                        {% endif %}
                        {% include 'components/heading.twig' with {
                        tag: fields.tag,
                        heading: fields.heading,
                        class:'headline-large'
                        }
                        %}
                        {% include 'components/content.twig' with {class: 'm-0 body-large'} %}
                  </div>

                  {# points #}
                  {% if fields.points %}
                  <div class="grid grid-cols-1 md:grid-cols-2 gap-x-sm gap-y-3 md:gap-y-4">
                        {% for item in fields.points %}
                        {% set is_last_two = loop.revindex <= 2 %} <div
                              class="flex items-center xl:justify-between gap-3 border-background-primary-bg-stroke {% if not is_last_two %}border-b pb-4 {% else %} pb-4 border-b md:pb-0 md:border-b-0 last:border-b-0 last:pb-0 {% endif %} ">
                              <div class="flex items-center gap-5">
                                    {% include "components/icon.twig" %}
                                    <p class="!m-0 body-large">
                                          {{item.point}}
                                    </p>
                              </div>
                  </div>
                  {% endfor %}
            </div>
            {% endif %}

            {% include "components/app-badges.twig" %}

      </div>

      {# phone images #}
      <div
            class="relative mx-auto xl:mx-0 w-full md:w-[400px] xl:w-full h-[410px] md:h-[490px] xl:h-[360px] xl:mb-10 grow-0 overflow-visible">
            <span
                  class="absolute top-1/2 left-1/2 w-[440px] md:w-[530px] xl:w-[390px] h-auto -translate-x-1/2 -translate-y-1/2 fill-background-primary-shape-fill">
                  {% include "resources/images/icons/blob-2.svg" %}
            </span>
            {% if fields.image %}
            <div class="absolute h-auto top-0 right-0 hero-phone-1 overflow-visible">
                  {{ responsive_img(
                  fields.image, {
                  size: 'large',
                  class: 'object-contain h-auto w-full md:w-[400px] xl:w-[350px] max-w-[330px] md:max-w-none',
                  })
                  }}
            </div>
            {% endif %}
      </div>

</div>
</div>
{% endblock %}