{% extends "components/block-wrapper.twig" %}
{% block block_content %}
<div class="yp-container posts-feed-section ajax-filter-section">
      <div class="flex flex-col gap-12 md:gap-16 items-center">

            <div class="flex flex-col gap-8 md:items-center">
                  <div class="flex flex-col gap-6 items-center">
                        {% include 'components/heading.twig' with {tag: fields.tag, heading: fields.heading,
                        class:'headline-large md:text-center'} %}
                        {% include 'components/content.twig' with {class: 'm-0 body-small md:text-center'} %}
                  </div>
                  {# filters... #}
                  {% if insight_terms %}
                  <div class="flex items-center gap-3 text-button-primary-text-fill-default flex-wrap">
                        <button data-filter="all"
                              class="filter-button !py-[5px] !px-5 border-button-primary-bg-stroke-default text-button-secondary-text-fill-default active">
                              All Insights
                        </button>
                        {% for item in insight_terms %}
                        <button data-filter="{{item.slug}}"
                              class="filter-button !py-[5px] !px-5 border-button-primary-bg-stroke-default text-button-secondary-text-fill-default">
                              {{item.name}}
                        </button>
                        {% endfor %}
                  </div>
                  {% endif %}
            </div>
      </div>
      <div class="feed-filter-results pt-12 md:pt-16">
            {% include "components/feed-container.twig" %}
      </div>
</div>

{% endblock %}